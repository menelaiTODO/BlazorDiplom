@page "/"

@using BlazorDiplom.Components.Login;

@inherits LoginComponent

<PageTitle>Вход</PageTitle>
<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <EditForm EditContext="@_editContext" OnSubmit="SignIn">
                            <DataAnnotationsValidator />
                        <div class="mb-md-5 mt-md-4 pb-5">
                            
                            <h2 class="fw-bold mb-2 text-uppercase">Вход</h2>
                            <p class="text-white-50 mb-5">Введите Ваш логин и пароль</p>

                            <div class="form-outline form-white mb-4">
                                    <InputText type="email" @bind-Value="@LoginModel.Email" id="typeEmailX" class="form-control form-control-lg" />
                                    <ValidationMessage For="@(() => LoginModel.Email)" />
                                <label class="form-label" for="typeEmailX">Email</label>
                            </div>

                            <div class="form-outline form-white mb-4">
                                    <InputText type="password" id="typePasswordX" @bind-Value="@LoginModel.Password"  class="form-control form-control-lg" />
                                    <ValidationMessage For="@(() => LoginModel.Password)" />
                                <label class="form-label" for="typePasswordX">Пароль</label>
                            </div>

                            <button class="btn btn-outline-light btn-lg px-5" type="submit">Войти</button>
                            <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                            </div>

                        </div>

                        </EditForm>
                        <div>
                            <p class="mb-0">
                                У Вас нет аккаунта? 
                                <NavLink class="nav-link" href="signUp">
                                <span class="text-white-50 fw-bold">Зарегистрироваться</span>
                                </NavLink>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>